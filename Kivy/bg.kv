    BoxLayout:
        orientation: "vertical"
        size: root.width, root.height
        spacing: 10
        padding: 10

        Label:
            text: "Name"
            font_size: 45
            background_color: (0,0,1,1)
            canvas.before:
                Color:
                    rgba: self.background_color
                Rectangle:
                    size: self.size
                    pos: self.pos

            color: (0,1,0,1)
            bold: True
            italic: True
            outline_color: (0,0,0)
            outline_width: 2

        TextInput:
            multiline: False

        Button:
            text: "Clear"
            background_color: (1,0,0,1)



