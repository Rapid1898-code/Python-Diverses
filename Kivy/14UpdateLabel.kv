<MyLayout>
    BoxLayout:
        orientation: "vertical"
        size: root.width, root.height

        Label:
            id: name_label
            text: "Whats Your Name"
            font_size: 32
        TextInput:
            id: name_input
            multiline: False
            size_hint: (1, .5)
        Button:
            id: name_button
            size_hint: (1, .25)
            font_size: 32
            text: "Submit"
            on_press: root.press()

