Screen:
    MDCard:
        size_hint: None,None
        size: 550, 750
        pos_hint: {"center_x": 0.5, "center_y":0.5}
        elevation: 10
        padding: 25
        spacing: 25
        orientation: "vertical"

        GridLayout:
            size_hint: (1, 1)
            cols: 1
            padding: 10
            spacing: 15                    
            #row_force_default: True
            #row_default_height: 30

            MDTextFieldRound:
                id: user
                hint_text: "stock ticker"
                icon_right: "account"
                #size_hint_x: None
                width: 30
                font_size: 18
                pos_hint: {"center_x": 0.2}   

            MDDropDownItem:
                id: spinnerIndex
                current_item: "auto"
                menu_items: ["auto","AEX25","ASX200","ATX","BEL20","CAC40","DAX","DOWJONES","EUROSTOXX50","EUROSTOXX600","FTSE100","HANGSENG","IBEX35","MDAX","NASDAQ","NIFTY50","NIKKEI225","SDAX","SENSEX","SMI","SP500","TSX"]
                pos_hint: {'center_x': .5, 'center_y': .6}                
                on_text: root.spinnerIndexClicked(spinnerIndex.text)
                multiline: False
                background_normal: ""
                background_color: (235/255,247/255,124/255,1)
                font_size: 18
                color: (0,0,0,1)
                on_release: app.menu.open()
                # padding: [10, (self.height-self.line_height)/2]     
          

        BoxLayout:
            orientation: "horizontal"
            #size: root.width, root.height
            padding: 15
            spacing: 25
            size_hint: (1, .3)

            GridLayout:
                size_hint: (.3,1)
                cols: 1
                MDRoundFlatButton:
                    text: "LOG IN"
                    font_size: 12
                    pos_hint: {"center_x":0.5}
                    on_press: app.logger()

            GridLayout:
                size_hint: (1,1)
                cols: 1
                MDRoundFlatButton:
                    text: "CLEAR"
                    font_size: 12
                    pos_hint: {"center_x":0.5}       
                    on_press: app.clear()            

        Widget:
            size_hint_y: None
            height: 10