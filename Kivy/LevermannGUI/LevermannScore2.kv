<MyLayout>
    stockTicker : stockTicker
    index : index
    financeFlag : financeFlag
    earningsDate : earningsDate

    BoxLayout:
        orientation: "vertical"
        size: root.width, root.height
        padding: 20

        Image:
            source: "../logoText.png"
            allow_stretch: True
            keep_ratio: True
            size_hint: (None,None)
            width: 100
            height: 100

        GridLayout:
            cols: 2
            row_force_default: True
            row_default_height: 30

            Label:
                text: "Stock Ticker"
            TextInput:
                id: stockTicker
                multiline: False
                background_normal: ""
                background_color: (235/255,247/255,124/255,1)
            Label:
                text: "Index"
            TextInput:
                id: index
                multiline: False
                background_normal: ""
                background_color: (235/255,247/255,124/255,1)
            Label:
                text: "Finance Stock (y/n)"
            TextInput:
                id: financeFlag
                multiline: False
                background_normal: ""
                background_color: (235/255,247/255,124/255,1)
            Label:
                text: "Last Earnings Info Date (optional)"
            TextInput:
                id: earningsDate
                multiline: False
                background_normal: ""
                background_color: (235/255,247/255,124/255,1)

        Button:
            text: "Calculate Levermann Score"
            font_size: 20
            on_press: root.levermannCalc()
            size_hint: (None,None)
            width: 300
            height: 70
            background_normal: ""
            background_color: (48/255,140/255,252/255,1)
            pos_hint: {"center_x": 0.5}
